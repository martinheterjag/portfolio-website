header(class="fixed top-0 left-0 right-0 w-full xld:bg-white xld:shadow ")
	div(class="py-4 px-8 sm:px-12 flex flex-wrap items-center justify-center w-full")
		div(class="flex-1 flex justify-between items-center h-12")
			a(href="/" class="text-xl font-bold text-gray-900") Martinheterjag

		label(for="menu-toggle" class="cursor-pointer sm:hidden block")
			svg(width="24", height="24" class="hamburger-color")
				use(xlink:href= "#icon-hamburger")

		input(class="hidden" type="checkbox" id="menu-toggle")

		div(id="menu" class="hidden sm:flex sm:items-center sm:w-auto w-full")
			nav(class="text-xl")
				ul(class="sm:flex items-center justify-between text-base text-gray-700 text-xl font-bold")
					+navItems
